<?xml version="1.0" encoding="UTF-8"?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" prefWidth="1000" prefHeight="600">
    <!-- Panel Izquierdo -->
    <left>
        <VBox prefWidth="300" spacing="20" alignment="CENTER" style="-fx-background-color: #00CCCC;">
            <!-- Imagen -->
            <ImageView fitWidth="200" fitHeight="150">
                <image>
                    <Image url="@/Images/atras.png" />
                </image>
            </ImageView>
            <!-- Botones -->
            <Button text="Añadir Producto" style="-fx-background-color: #CCCCCC;" />
            <Button text="Eliminar Producto" style="-fx-background-color: #CCCCCC;" />
            <Button text="Atrás" style="-fx-background-color: #CCCCCC;" />
        </VBox>
    </left>
    
    <!-- Panel Derecho -->
    <center>
        <TableView>
            <columns>
                <TableColumn text="ID_Producto" />
                <TableColumn text="Estado" />
                <TableColumn text="Fecha_Emision" />
                <TableColumn text="Fecha_Vencimiento" />
            </columns>
        </TableView>
    </center>
</BorderPane>
